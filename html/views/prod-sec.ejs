        <!-- start section -->
       
        <section class="bg-midnight-blue pt-50px">
            <div class="container">
                <h3 class="text-dark xs-mb-0 xs-text-center fw-500 text-center">Destacados</h3>
                <div class="mb-10px row row-cols-1 row-cols-xl-3 row-cols-lg-3 row-cols-sm-2">  
                    <% products.forEach((product, index) => { %>
                        <% if (product.section === 'destacados') { %>
                        <div class="p-0 h-200px xs-h-auto product-item-destacados" data-anime='{ "el": "childs", "translateY": [30, 0], "opacity": [0,1], "duration": 800, "delay": 0, "staggervalue": 300, "easing": "easeOutQuad" }' <% if (index >= 6) { %> style="display: none;" <% } %> >
                            <div class="d-flex product-card p-1 m-10px align-items-center">
                                <div class="col-4">
                                    <img src="<%= product.image %>" alt="" class="card-img-top">
                                </div>
                                <div class="col-8 pl-20px">
                                    <h6 class="text-white mb-0px"><%= product.name %></h6>
                                    <p class="text-white mb-0">$ <%= product.price %></p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    <% }) %>
                </div>
                <div class="text-center">
                    <button id="view-more-btn-destacados" class="btn btn-primary">Ver más</button>                 
                </div>
            </div>
        </section>

        <section class="bg-midnight-blue pt-50px">
            <div class="container">
                <h3 class="text-dark xs-mb-0 xs-text-center fw-500 text-center">Nuevos Ingresos</h3>
