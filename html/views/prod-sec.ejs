        <script>
            document.getElementById('view-more-btn-destacados').addEventListener('click', function() {
                const productItems = document.querySelectorAll('.product-item-destacados');
                productItems.forEach((item, index) => {
                    if (index >= 6) {
                        item.style.display = 'block';
                    }
                });
                this.style.display = 'none'; // Ocultar el botón "Ver más" después de hacer clic
            });

            document.getElementById('view-more-btn-nuevosIngresos').addEventListener('click', function() {
